[Unit]
Description=Schedule Encryption Key Rotation
Documentation=https://prometheus.io/docs/
Requires=key-rotation.service

[Timer]
# Run monthly on the 1st at 4:30 AM
OnCalendar=*-*-01 04:30:00
# Add some randomization to prevent all jobs from running simultaneously
RandomizedDelaySec=30min
# Catch up on missed runs when system was down
Persistent=true
# Accuracy window
AccuracySec=1h

[Install]
WantedBy=timers.target

