<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{{ template "backup.title" . }}</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      color: #333;
    }
    .alert-box {
      margin-bottom: 15px;
      padding: 15px;
      border-radius: 5px;
    }
    .firing {
      background-color: #f8d7da;
      border: 1px solid #f5c6cb;
    }
    .resolved {
      background-color: #d4edda;
      border: 1px solid #c3e6cb;
    }
    .critical {
      color: #721c24;
      font-weight: bold;
    }
    .warning {
      color: #856404;
      font-weight: bold;
    }
    .info {
      color: #0c5460;
    }
    h3 {
      margin-top: 0;
    }
    .details {
      margin-top: 10px;
      padding-top: 10px;
      border-top: 1px solid #ddd;
    }
    table {
      border-collapse: collapse;
      width: 100%;
    }
    th, td {
      text-align: left;
      padding: 8px;
      border-bottom: 1px solid #ddd;
    }
    th {
      background-color: #f2f2f2;
    }
  </style>
</head>
<body>
  <h2>{{ template "backup.title" . }}</h2>
  
  {{ if gt (len .Alerts.Firing) 0 }}
  <h3>Firing Alerts: {{ .Alerts.Firing | len }}</h3>
  {{ range .Alerts.Firing }}
  <div class="alert-box firing">
    <h4 class="{{ .Labels.severity }}">{{ .Labels.alertname }}{{ if .Labels.severity }} - {{ .Labels.severity | toUpper }}{{ end }}</h4>
    <p><strong>Description:</strong> {{ .Annotations.description }}</p>
    <p><strong>Started:</strong> {{ .StartsAt | since }}</p>
    {{ if .Annotations.runbook }}<p><strong>Runbook:</strong> <a href="{{ .Annotations.runbook }}">{{ .Annotations.runbook }}</a></p>{{ end }}
    
    <div class="details">
      <table>
        <tr>
          <th>Instance</th>
          <td>{{ .Labels.instance }}</td>
        </tr>
        {{ if .Labels.job }}
        <tr>
          <th>Job</th>
          <td>{{ .Labels.job }}</td>
        </tr>
        {{ end }}
        {{ if .Annotations.value }}
        <tr>
          <th>Value</th>
          <td>{{ .Annotations.value }}</td>
        </tr>
        {{ end }}
      </table>
    </div>
  </div>
  {{ end }}
  {{ end }}
  
  {{ if gt (len .Alerts.Resolved) 0 }}
  <h3>Resolved Alerts: {{ .Alerts.Resolved | len }}</h3>
  {{ range .Alerts.Resolved }}
  <div class="alert-box resolved">
    <h4>{{ .Labels.alertname }}{{ if .Labels.severity }} - {{ .Labels.severity | toUpper }}{{ end }}</h4>
    <p><strong>Description:</strong> {{ .Annotations.description }}</p>
    <p><strong>Duration:</strong> {{ .StartsAt | since }} to {{ .EndsAt | since }}</p>
    
    <div class="details">
      <table>
        <tr>
          <th>Instance</th>
          <td>{{ .Labels.instance }}</td>
        </tr>
        {{ if .Labels.job }}
        <tr>
          <th>Job</th>
          <td>{{ .Labels.job }}</td>
        </tr>
        {{ end }}
      </table>
    </div>
  </div>
  {{ end }}
  {{ end }}
  
  <p>This is an automated alert notification from the Monitoring System.</p>
</body>
</html>
{{ end }}

